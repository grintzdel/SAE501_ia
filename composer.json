{
    "name": "logipro/spark",
    "type": "app",
    "description": "start a new PHP project with a simple base structure",
    "keywords": ["php", "DDT"],
    "homepage": "https://github.com/frederic100/spark",
    "license": "Copyrighted",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Frédéric Royet",
            "email": "frederic.royet@logipro.com",
            "homepage": "https://www.linkedin.com/in/frederic-royet-42568566/",
            "role": "Project Founder"
        }
    ],
    "require": {
        "php": ">=8.3",
        "rubix/ml": "^2.5",
        "symfony/http-client": "^7.2",
        "symfony/http-foundation": "^7.2",
        "symfony/framework-bundle": "^7.1",
        "symfony/runtime": "^7.2",
        "symfony/routing": "^7.2",
        "symfony/browser-kit": "^7.2",
        "symfony/console": "^7.2",
        "symfony/monolog-bundle": "^3.10",
        "symfony/twig-bundle": "^7.2",
        "symfony/dotenv": "^7.2",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.28",
        "phpstan/phpdoc-parser": "^1.28",
        "phpstan/phpstan": "1.10",
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "3.*",
        "behat/behat": "^3.14"
    },
    "autoload": {
        "psr-4" : {
            "Spark\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Tests\\Spark\\" : "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.0.*"
        },
        "runtime": {
            "dotenv_path": "src/Web/.env"
        }
    }
}
